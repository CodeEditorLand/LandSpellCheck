{
	"name": "Spell",
	"displayName": "[DEPRECATED] Spelling and Grammar Checker",
	"version": "0.0.1",
	"private": false,
	"description": "[DEPRECATED] Web service is no longer active - Try `Code Spellchecker`.  See README for details.",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/extension",
	"scripts": {
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "tsc -p ./"
	},
	"contributes": {
		"commands": [
			{
				"category": "Spell Checker",
				"command": "SpellProvider.changeLanguage",
				"title": "Change Language"
			}
		],
		"configuration": {
			"properties": {
				"spell.StopAsking": {
					"default": false,
					"description": "Spell: Don't ask again for deprication warning",
					"type": "boolean"
				}
			},
			"title": "Spell options"
		},
		"keybindings": [
			{
				"command": "editor.action.quickFix",
				"key": "Alt+."
			}
		]
	},
	"activationEvents": [
		"*"
	],
	"dependencies": {
		"open": "10.1.0",
		"request": "2.9.152",
		"teacher": "0.1.0",
		"xml2js": "0.6.2"
	},
	"devDependencies": {
		"@types/mocha": "10.0.6",
		"@types/node": "20.11.30",
		"mocha": "10.3.0",
		"typescript": "5.4.2",
		"typescript-esbuild": "latest",
		"vscode": "1.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "images/spellIcon.svg",
	"galleryBanner": {
		"color": "#5c2d91",
		"theme": "dark"
	}
}
